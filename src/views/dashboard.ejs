<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Visitor Parking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Visitor Parking</a>
            <div class="d-flex">
                <span class="navbar-text me-3">Welcome, <%= user.name %></span>
                <button id="logoutBtn" class="btn btn-outline-light btn-sm">Logout</button>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Visitor Management</h2>
            <div>
                <a href="/api/visitors/download/excel" class="btn btn-success me-2"><i
                        class="bi bi-file-earmark-excel"></i> Excel</a>
                <a href="/api/visitors/download/pdf" class="btn btn-danger me-2"><i class="bi bi-file-earmark-pdf"></i>
                    PDF</a>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#visitorModal">
                    <i class="bi bi-plus-lg"></i> Add Visitor
                </button>
            </div>
        </div>

        <!-- Filters -->
        <div class="card mb-4">
            <div class="card-body">
                <form class="row g-3" id="filterForm">
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="search"
                            placeholder="Search (Name, Plate, Mobile)">
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" name="status">
                            <option value="">Status (All)</option>
                            <option value="ENTERED">Entered</option>
                            <option value="EXITED">Exited</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="date" class="form-control" name="fromDate">
                    </div>
                    <div class="col-md-2">
                        <input type="date" class="form-control" name="toDate">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-secondary w-100">Filter</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Visit Date</th>
                        <th>Name</th>
                        <th>Plate #</th>
                        <th>Entry Gate</th>
                        <th>Entry Time</th>
                        <th>Status</th>
                        <th>Exit Time</th>
                        <th>Exit Gate</th>
                        <th>Notes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="visitorTableBody">
                    <!-- Populated by JS -->
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav>
            <ul class="pagination justify-content-center" id="pagination"></ul>
        </nav>
    </div>

    <!-- Add/Edit Modal -->
    <div class="modal fade" id="visitorModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Add New Visitor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="visitorForm">
                        <input type="hidden" id="visitorId">
                        <div class="mb-3">
                            <label class="form-label">Visitor Name</label>
                            <input type="text" class="form-control" name="visitor_name" required>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Plate Number</label>
                                <input type="text" class="form-control" name="plate_number" required 
                                       pattern="([A-Z]{2}[0-9]{2}[A-Z]{1,2}[0-9]{1,4}$|^[A-Z]{1,2}[0-9]{5}$)"
                                       placeholder="TN01AB1234 or AB12345 (Dubai)"
                                       title="Enter valid plate: Indian format (TN01AB1234) or Dubai format (AB12345)"
                                       style="text-transform: uppercase;">
                                <div class="invalid-feedback">
                                    Please enter a valid vehicle plate number
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Mobile Number</label>
                                <input type="text" class="form-control" name="mobile_number" required 
                                       pattern="(^([6-9][0-9]{9}$|^971[0-9]{8}$|^5[0-9]{8}$)" 
                                       placeholder="9876543210 or 971501234567"
                                       title="Enter valid Indian mobile (10 digits starting 6-9) or Dubai number (971xxxxxxx or 5xxxxxxxx)">
                                <div class="invalid-feedback">
                                    Please enter a valid mobile number (India: 10 digits starting 6-9, Dubai: 971xxxxxxx or 5xxxxxxxx)
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Purpose</label>
                            <input type="text" class="form-control" name="purpose" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Visit Date</label>
                            <input type="date" class="form-control" name="visit_date" required 
                                   max=""
                                   title="Select visit date">
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Entry Gate</label>
                                <input type="text" class="form-control" name="entry_gate" required 
                                       placeholder="Gate 1, Gate 2, Main Gate">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Vehicle Type</label>
                                <select class="form-select" name="vehicle_type">
                                    <option value="Car">Car</option>
                                    <option value="Bike">Bike</option>
                                    <option value="Truck">Truck</option>
                                </select>
                            </div>
                        </div>
                        <!-- Status & Exit (Visible only for Edit) -->
                        <div id="editFields" style="display:none;">
                            <hr>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Status</label>
                                    <select class="form-select" name="status">
                                        <option value="ENTERED">ENTERED</option>
                                        <option value="EXITED">EXITED</option>
                                        <option value="CANCELLED">CANCELLED</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Exit Time</label>
                                    <input type="time" class="form-control" name="exit_time">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Exit Gate</label>
                                    <input type="text" class="form-control" name="exit_gate" 
                                           placeholder="Gate 1, Gate 2, Main Gate">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Notes</label>
                                    <textarea class="form-control" name="notes" rows="3" 
                                              placeholder="Additional notes about visitor..."></textarea>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Set max date to today for visit date
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const day = String(today.getDate()).padStart(2, '0');
            const month = String(today.getMonth() + 1).padStart(2, '0');
            const year = today.getFullYear();
            const todayFormatted = `${day}-${month}-${year}`;
            
            const dateInput = document.querySelector('input[name="visit_date"]');
            if (dateInput) {
                dateInput.max = `${year}-${month}-${day}`; // HTML5 date format (YYYY-MM-DD)
                dateInput.value = todayFormatted; // Display format (DD-MM-YYYY)
            }
        });

        // Simple state management
        let currentPage = 1;

        async function loadVisitors(page = 1) {
            const filters = new URLSearchParams(new FormData(document.getElementById('filterForm'))).toString();
            const res = await fetch(`/api/visitors?page=${page}&limit=10&${filters}`);
            const data = await res.json();

            const tbody = document.getElementById('visitorTableBody');
            tbody.innerHTML = '';

            data.data.visitors.forEach(v => {
                // Format visit date to DD-MM-YYYY
                const visitDate = new Date(v.visit_date);
                const formattedDate = `${String(visitDate.getDate()).padStart(2, '0')}-${String(visitDate.getMonth() + 1).padStart(2, '0')}-${visitDate.getFullYear()}`;
                
                tbody.innerHTML += `
          <tr>
            <td>${formattedDate}</td>
            <td>${v.visitor_name}</td>
            <td>${v.plate_number}</td>
            <td>${v.entry_gate}</td>
            <td>${v.entry_time}</td>
            <td><span class="badge bg-${v.status === 'ENTERED' ? 'success' : 'secondary'}">${v.status}</span></td>
            <td>${v.exit_time || '-'}</td>
            <td>${v.exit_gate || '-'}</td>
            <td>${v.notes || '-'}</td>
            <td>
              <button class="btn btn-sm btn-info me-1" onclick="editVisitor(${v.id})"><i class="bi bi-pencil"></i></button>
              <button class="btn btn-sm btn-danger" onclick="deleteVisitor(${v.id})"><i class="bi bi-trash"></i></button>
            </td>
          </tr>
        `;
            });

            // Update Pagination (simplified)
            currentPage = page;
        }

        // Initial load
        loadVisitors();

        // Filter
        document.getElementById('filterForm').addEventListener('submit', (e) => {
            e.preventDefault();
            loadVisitors(1);
        });

        // Create/Update
        document.getElementById('visitorForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Mobile number validation
            const mobileInput = document.querySelector('input[name="mobile_number"]');
            const mobilePattern = /^([6-9][0-9]{9}$|^971[0-9]{8}$|^5[0-9]{8}$)/;
            
            // Plate number validation
            const plateInput = document.querySelector('input[name="plate_number"]');
            const platePattern = /^([A-Z]{2}[0-9]{2}[A-Z]{1,2}[0-9]{1,4}$|^[A-Z]{1,2}[0-9]{5}$)/;
            
            if (!platePattern.test(plateInput.value.toUpperCase())) {
                plateInput.classList.add('is-invalid');
                plateInput.focus();
                return;
            } else {
                plateInput.classList.remove('is-invalid');
            }
            
            if (!mobilePattern.test(mobileInput.value)) {
                mobileInput.classList.add('is-invalid');
                mobileInput.focus();
                return;
            } else {
                mobileInput.classList.remove('is-invalid');
            }
            
            const id = document.getElementById('visitorId').value;
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            const url = id ? `/api/visitors/${id}` : '/api/visitors';
            const method = id ? 'PUT' : 'POST';

            const res = await fetch(url, {
                method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            if (res.ok) {
                bootstrap.Modal.getInstance(document.getElementById('visitorModal')).hide();
                loadVisitors(currentPage);
                e.target.reset();
                document.getElementById('visitorId').value = '';
                document.getElementById('editFields').style.display = 'none';
                document.getElementById('modalTitle').innerText = 'Add New Visitor';
            } else {
                const err = await res.json();
                alert(err.message);
            }
        });

        // Edit Setup
        window.editVisitor = async (id) => {
            const res = await fetch(`/api/visitors/${id}`);
            const json = await res.json();
            const v = json.data.visitor;

            const form = document.getElementById('visitorForm');
            document.getElementById('visitorId').value = v.id;

            // Populate fields
            Object.keys(v).forEach(key => {
                if (form.elements[key]) form.elements[key].value = v[key];
            });

            document.getElementById('editFields').style.display = 'block';
            document.getElementById('modalTitle').innerText = 'Edit Visitor';
            new bootstrap.Modal(document.getElementById('visitorModal')).show();
        };

        // Delete
        window.deleteVisitor = async (id) => {
            if (!confirm('Are you sure?')) return;
            await fetch(`/api/visitors/${id}`, { method: 'DELETE' });
            loadVisitors(currentPage);
        };

        // Logout function
        document.getElementById('logoutBtn').addEventListener('click', async () => {
            try {
                // Get refresh token from cookies
                const cookies = {};
                document.cookie.split(';').forEach(cookie => {
                    const [key, value] = cookie.trim().split('=');
                    cookies[key] = value;
                });
                
                await fetch('/api/auth/logout', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ refreshToken: cookies.refreshToken })
                });
                window.location.href = '/';
            } catch (error) {
                console.error('Logout failed:', error);
                window.location.href = '/';
            }
        });

        // Reset modal on close
        document.getElementById('visitorModal').addEventListener('hidden.bs.modal', () => {
            document.getElementById('visitorForm').reset();
            document.getElementById('visitorId').value = '';
            document.getElementById('editFields').style.display = 'none';
            document.getElementById('modalTitle').innerText = 'Add New Visitor';
        });
    </script>
</body>

</html>